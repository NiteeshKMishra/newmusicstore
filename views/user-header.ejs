<!-- Forgot UserName Modal-->
<div class="modal" id="cngpassModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-info">
        <h3 class="modal-title ml-auto text-light font-weight-bold">Change Password</h3>
        <button class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form id="changepasswordform">
          <div class="form-group">
            <label for="email" class="d-none d-md-block m-auto">Enter your Email</label>
            <input type="email" name="userupdateemail" placeholder="Enter Your Email..." class="form-control m-auto">
          </div>
          <div class="form-group">
            <label for="Password" class="d-none d-md-block m-auto">Enter your old password</label>
            <input type="text" name="oldpassword" placeholder="Enter Your Old Password..." class="form-control m-auto">
          </div>
          <div class="form-group">
            <label for="Password" class="d-none d-md-block m-auto">Enter your New password</label>
            <input type="password" name="newpassword" placeholder="Enter Your New Password..."
              class="form-control m-auto">
            <span id="pass-msg"></span>
          </div>
          <div class="modal-footer">
            <span id="final-msg"></span>
            <button class="btn btn-primary" type="submit">Change Password</button>
            <button class="btn btn-secondary" type="reset">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>