<div class="row jumbotron justify-content-center" style="height:137vh;width: 105vw;background-color: lightseagreen;">
  <button class="btn btn-primary d-none" id="showSuccessMsgButton" data-toggle="modal"
    data-target="#successMsgModal">ADD</button>
  <div class="mb-2 col-lg-6">
    <h4 class="display-5">Verify your Cart</h4>
    <table class="table table-striped d-none d-sm-block">
      <thead class="thead-dark" id="carttable">
        <tr>
          <th>Item</th>
          <th>Quantity</th>
          <th>Categoty</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%var total=0%>
        <%var count=0%>
        <%for(var item of items){%>
        <%total=total+item.price*item.quantity%>
        <tr>
          <td><%=item.name%></td>
          <th><%=item.quantity%></td>
          <td><%=item.category%></td>
          <td><%=item.price*item.quantity%></td>
          <td><button class="btn btn-danger btn-sm" name="deletebutton" id="<%=item._id%>"
              data="<%=JSON.stringify(items)%>">Delete</button></td>
        </tr>
        <%count=count+1%>
        <%}%>
        </tbody>
      </table>

      <table class="table table-striped table-sm d-sm-none">
          <thead class="thead-dark" id="carttable">
            <tr>
              <th>Item</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <%var total=0%>
        <%var count=0%>
        <%for(var item of items){%>
        <%total=total+item.price*item.quantity%>
        <tr>
          <td><%=item.name%></td>
          <th><%=item.quantity%></td>
          <td><%=item.price*item.quantity%></td>
          <td><button class="btn btn-danger btn-sm" name="deletebutton" id="<%=item._id%>"
              data="<%=JSON.stringify(items)%>">Delete</button></td>
        </tr>
        <%count=count+1%>
        <%}%>
            </tbody>
    </table>
    <p class="font-weight-bold float-left p-2" style="border: 1px solid black">Your Total: <span name="carttotal"><%=total%></span>
        </p>
  </div>

  <div class="col-lg-6 mr-2">
    <h4 class="display-5">Enter your Communication Details</h4>
    <div class="border border-info"></div>
    <form action="/payment" method="GET" class="form" id="communicationform">
      <div class="form-group">
        <label for="name">Enter Your Name</label>
        <input type="text" name="name" class="form-control" placeholder="Enter your Name..." required>
      </div>
      <div class="form-group">
        <label for="number">Enter Your Contact Number</label>
        <input type="number" name="number" class="form-control" placeholder="Enter your number..." required>
      </div>
      <div class="form-group">
        <label for="address">Enter Your Complete Address</label>
        <input type="text" name="address" class="form-control" placeholder="Enter your address..." required>
      </div>
      <div class="form-group">
        <label for="name">Enter Your ZipCode</label>
        <input type="number" name="zipcode" class="form-control" placeholder="Enter your zipcode..." required>
      </div>
      <div>
        <button class="btn btn-outline-primary" type="submit">Checkout</button>
        <button class="btn btn-outline-secondary" type="reset">Cancel</button>
      </div>
    </form>
  </div>
</div>

</div>

<div class="modal" id="successMsgModal">
  <div class="modal-dialog">
    <div class="modal-content bg-danger">
      <span class="text-dark text-center font-weight-bold">Successfully deleted from cart.</span>
    </div>
  </div>
</div>